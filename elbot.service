[Unit]
Description=ELBOT Discord Bot with Web Interface
After=network.target

[Service]
Type=simple
User=alex
WorkingDirectory=/home/alex/ELBOT
ExecStart=/home/alex/ELBOT/venv/bin/python /home/alex/ELBOT/main.py
Restart=always
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=3
CPUQuota=40%
MemoryMax=384M
EnvironmentFile=/home/alex/ELBOT/.env
Environment=ELBOT_WEB_PORT=8081
Environment=FLASK_ENV=production

[Install]
WantedBy=multi-user.target
