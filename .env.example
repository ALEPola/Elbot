# Copy to .env and fill in your own values.
# Required credentials
DISCORD_TOKEN=
OPENAI_API_KEY=

# Common options (safe defaults are provided for most settings)
COMMAND_PREFIX=!
ELBOT_USERNAME=Elbot
AUTO_LAVALINK=1
LAVALINK_HOST=localhost
LAVALINK_PORT=0  # 0 lets auto-lavalink choose an open port
LAVALINK_PASSWORD=changeme
# Customize the auto-selected Lavalink port range (inclusive).
# AUTO_LAVALINK_PORT_START=2333
# AUTO_LAVALINK_PORT_TRIES=40  # scans start..start+tries-1
# Override the pinned Lavalink 4.0.6 download used by auto_lavalink.py.
# LAVALINK_DOWNLOAD_URL=https://github.com/lavalink-devs/Lavalink/releases/download/4.0.6/Lavalink.jar
# Adjust once Mafic announces support for newer builds. Set
# MAFIC_MAX_SUPPORTED_LAVALINK_VERSION to silence the startup warning.
FFMPEG_PATH=
ELBOT_DATA_DIR=

# youtube-source plugin version (auto-lavalink fetches this release)
LAVALINK_YOUTUBE_PLUGIN_VERSION=1.13.5

# YouTube cookies (strongly recommended for reliable playback)
# Option A (browser extension):
#   1. Log into https://youtube.com in a desktop browser.
#   2. Use an extension like "Get cookies.txt LOCALLY" to export cookies.txt.
# Option B (command line on this host):
#   yt-dlp --cookies-from-browser chromium --write-cookies ~/youtube_cookies.txt \
#          https://www.youtube.com/watch?v=dQw4w9WgXcQ
# After exporting, set the path below (absolute path or relative to this repo).
YT_COOKIES_FILE=

# Hedge delay before starting yt-dlp fallback (seconds)
# Lower values start fallback sooner but waste a yt-dlp call when Lavalink succeeds.
ELBOT_FALLBACK_HEDGE_DELAY=1.5

# Feature-specific settings (optional)
GUILD_ID=
ICS_URL=
F1_CHANNEL_ID=
LOCAL_TIMEZONE=
ELBOT_SERVICE=elbot.service
PORT=8000
