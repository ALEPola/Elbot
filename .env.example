# Copy to .env and fill in your own values.
# Required credentials
DISCORD_TOKEN=
OPENAI_API_KEY=

# Common options (safe defaults are provided for most settings)
COMMAND_PREFIX=!
ELBOT_USERNAME=Elbot
AUTO_LAVALINK=1
LAVALINK_HOST=localhost
LAVALINK_PORT=0  # 0 lets auto-lavalink choose an open port
LAVALINK_PASSWORD=changeme
# Customize the auto-selected Lavalink port range (inclusive).
# AUTO_LAVALINK_PORT_START=2333
# AUTO_LAVALINK_PORT_TRIES=40  # scans start..start+tries-1
# Override the pinned Lavalink 4.0.6 download used by auto_lavalink.py.
# LAVALINK_DOWNLOAD_URL=https://github.com/lavalink-devs/Lavalink/releases/download/4.0.6/Lavalink.jar
# Adjust once Mafic announces support for newer builds. Set
# MAFIC_MAX_SUPPORTED_LAVALINK_VERSION to silence the startup warning.
FFMPEG_PATH=
ELBOT_DATA_DIR=

# YouTube Cookies (CRITICAL for music playback)
# Fixes 99% of YouTube playback issues including cipher errors
# 1. Install browser extension: "Get cookies.txt LOCALLY"
#    Chrome: https://chrome.google.com/webstore/detail/cclelndahbckbenkjhflpdbgdldlbecc
#    Firefox: https://addons.mozilla.org/firefox/addon/get-cookies-txt-locally/
# 2. Go to youtube.com and log in (any Google account, no premium needed)
# 3. Click extension icon → Export → Save as cookies.txt
# 4. Place cookies.txt in your Elbot directory (next to this .env file)
# 5. Set path below (use ./cookies.txt for relative path)
# 6. Refresh monthly for 24/7 bots
YOUTUBE_COOKIES_PATH=

# Feature-specific settings (optional)
GUILD_ID=
ICS_URL=
F1_CHANNEL_ID=
LOCAL_TIMEZONE=
ELBOT_SERVICE=elbot.service
PORT=8000
